package edu.neu.csye6200;


public class PersonFactory {

	private PersonFactory() {
		
	}
	
	public static Person getPerson(int criteria, String fname, String lname, int age, double GPA){
		Person person = null; // new Person();
		if (criteria == 0) {
			person = new Student(fname, lname, age, GPA);
		}
		else {
			person = new Employee();
		}
		return person;
		
	}

}

	
