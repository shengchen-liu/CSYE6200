package edu.neu.csye6200;

public class Student extends Person {

	@Override
	public String toString() {
		return super.toString();
	}
	//toString

	/**
	@Override
	public void sort() {
		System.out.println("Sorting students...");				
	}
	**/
	
/**
	@Override
	public String Speak() {
		// TODO Auto-generated method stub
		return null;
