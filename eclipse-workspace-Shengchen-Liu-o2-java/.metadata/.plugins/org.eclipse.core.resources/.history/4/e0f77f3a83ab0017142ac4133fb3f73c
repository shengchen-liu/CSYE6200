package edu.neu.csye6200;

import java.util.ArrayList;
import java.util.List;

public class Company {
	public void sort() {
		List<Person> employees = new ArrayList<Person>();
		employees.add(PersonFactory.getPerson(1,"Glen", "Taylor"));
		employees.add(PersonFactory.getPerson(0, "Andrew", "Wiggins"));
		employees.add(PersonFactory.getPerson(1, "Zach", "Lavine"));
		employees.add(PersonFactory.getPerson(1, "Karl", "Towns"));
		System.out.println(employees.size() + "employees in list.");
		
		for (Person p:employees) {
			p.sort();
		}
	}
	
	public static void demo() {
		Company obj = new Company();
		obj.sort();
	}

}
