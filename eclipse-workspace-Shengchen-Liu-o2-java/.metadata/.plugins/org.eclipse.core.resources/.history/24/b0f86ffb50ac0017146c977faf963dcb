package edu.neu.csye6200;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class Company {
	public void sort() {
		List<Person> students = new ArrayList<Person>();
		List<Person> employees = new ArrayList<Person>();
		
		students.add(PersonFactory.getPerson(0, "Tyrus", "Jones", 26, 3.7));
		students.add(PersonFactory.getPerson(0, "Jimmy", "Butler", 29, 3.5));
		students.add(PersonFactory.getPerson(0, "Jeremy", "Lin", 28, 3.9));
		students.add(PersonFactory.getPerson(0, "Andrew", "Wiggins", 22, 4.0));
		
		employees.add(PersonFactory.getPerson(1,"Glen", "Taylor",60, -1));
		employees.add(PersonFactory.getPerson(1, "Zach", "Lavine", 21, -1));
		employees.add(PersonFactory.getPerson(1, "Karl", "Towns", 45, -1));
		System.out.println(employees.size() + "employees in list.");
		
		Collections.sort(students);
		
		/**
		for (Person p:employees) {
			p.sort();
		}
		**/
	}
	
	public static void demo() {
		Company obj = new Company();
		obj.sort();
	}

}
